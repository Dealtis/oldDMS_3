<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#343434" />

            <stroke android:width="1dp" android:color="#171717" android:layout_marginBottom="10dp" />



            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

        </shape>
    </item>
    <item>
        <shape>
        	
            <gradient android:angle="45" android:endColor="#3D80B2" android:startColor="#6EC2FF" />





            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
           
        </shape>
   </item>

</selector>


