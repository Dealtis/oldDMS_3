<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#BC1212" />
      <stroke
          android:width="1dp"
          android:color="#ccc" />
      </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#D83131"
          android:endColor="#BF3535"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#ccc" />
      </shape>
  </item>
</selector>